<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.inmobi.nativead.sample.SplashFullscreenActivity">

    <com.inmobi.nativead.sample.CountDownView
        android:layout_alignParentRight="true"
        android:id="@+id/countDownView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:background_color="#22000000"
        app:border_color="#55B8E2"
        app:border_width="2dp"
        app:text_size="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_view"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <com.inmobi.nativead.sample.CountDownView
        android:id="@+id/PreRollBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:background_color="#22020020"
        app:border_color="#55B8E2"
        app:border_width="2dp"
        app:text_size="12dp"
        app:text="前贴视频"
        android:layout_alignParentBottom="true"
         />


</RelativeLayout>
